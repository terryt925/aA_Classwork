<h1> Here is your cat! </h1> 

<table>
    <thead> 
    <tr><th colspan ="2"><%= @cat.name %><th><tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @cat.color %></td>
        </tr>
        <tr>
            <td><%= @cat.age %></td>
        </tr>
        <tr>
            <td><%= @cat.sex %></td>
        </tr>
        <tr>
            <td><%= @cat.description %></td>
        </tr>
    </tbody>
</table>
 
<li><%= render "cat", cat: @cat, action: "show" %></li> 

