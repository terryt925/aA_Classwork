
<% if action == 'show' %>
  <a href="<%= cats_url %>">Cat Index Link</a>
<% else %>
    <a href="<%= cats_url(@cat) %>">Cat Show Page</a>
<% end  %>

<table>
    <thead> 
    <tr><th colspan ="2"><%= @cat.name %><th><tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @cat.color %></td>
        </tr>
        <tr>
            <td><%= @cat.age %></td>
        </tr>
        <tr>
            <td><%= @cat.sex %></td>
        </tr>
        <tr>
            <td><%= @cat.description %></td>
        </tr>
    </tbody>
</table>  
 
